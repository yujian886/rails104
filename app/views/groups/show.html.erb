<div class="col-md-12">
  <div class="group">

    <span class="float-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class="badge badge-success"> 群组成员 </label>
        <%= link_to("Quit Group", quit_group_path(@group), method: :post, class: "btn btn-sm btn-outline-secondary") %>
      <% else %>
        <label class="badge badge-warning"> 不是群组成员 </label>
         <%= link_to("Join Group", join_group_path(@group), method: :post, class: "btn btn-sm btn-outline-secondary") %>
      <% end %>
    </span>

    <% if current_user && current_user == @group.user %>
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-sm btn-outline-secondary float-right")%>
    <% end %>
    <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-sm btn-outline-secondary float-right")%>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
  <table class="table">
    <thead>
      <tr>
        <th>文章内容</th>
        <th>发表者</th>
        <th>发表时间</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= post.user.email %></td>
      <td><%= post.created_at %></td>
    </tr>
    <% end %>
  </tbody>
 </table>
 <div class="text-center">
   <%= will_paginate @posts %>
 </div>

</div>
